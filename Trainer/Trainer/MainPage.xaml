<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trainer.MainPage"
             Title="Trainer"
             Background="#FFE4ED">

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Тренажёр" FontFamily="UbuntuBold" FontSize="40" TextColor="#00488C" HorizontalOptions="Center" FontAttributes="Bold" Padding="0,30,0,0"/>
            <Label Text="для изучения английских слов" FontFamily="UbuntuLight" FontSize="27" TextColor="#00488C" HorizontalOptions="Center" Padding="0,0,0,30"/>
            <Image Margin="0,20,0,0" WidthRequest="250" HeightRequest="250" x:Name="ImageBooks"/>
            <Button x:Name="ButtonStart" Margin="0,70,0,0" WidthRequest="200" HeightRequest="200" Text="Начать" Clicked="ButtonStart_Clicked" 
                    CornerRadius="100" FontAttributes="Bold,Italic" FontFamily="Cairo-Regular" FontSize="35" HorizontalOptions="Center" BorderColor="Black" Background="#C7ADB5"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
